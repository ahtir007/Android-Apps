<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/divider_horizontal_bright"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/img_blog_img"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:contentDescription="@string/todo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_blog_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="#0B0000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_blog_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_blog_short_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="5dp"
        android:textColor="#100101"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/img_blog_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_blog_location_name" />

    <TextView
        android:id="@+id/tv_blog_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="245dp"
        android:layout_marginBottom="32dp"
        android:paddingStart="4dp"
        android:paddingEnd="0dp"
        android:text="@string/ahtir"
        android:textColor="#130101"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_blog_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_blog_short_des" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="80dp"
        android:layout_height="20dp"


        android:layout_marginStart="8dp"
        android:layout_marginBottom="3dp"
        android:clickable="true"


        android:focusable="true"
        android:focusableInTouchMode="false"
        android:foregroundGravity="center"
        android:isIndicator="false"
        android:numStars="5"
        android:progressTint="#F6CA07"
        android:rating="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="32dp"
        android:text="@string/by"
        android:textColor="#120101"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_blog_author"
        app:layout_constraintStart_toEndOf="@+id/img_blog_img"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>