<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="-100dp"
        android:right="-100dp"
        android:top="-100dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />

            <stroke
                android:width="2dp"
                android:color="@color/black"
                android:dashWidth="10dp"
                android:dashGap="6dp"
                />
        </shape>
    </item>

</layer-list>






